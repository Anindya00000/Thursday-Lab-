import java.util.*;
public class EvenNumbers  
{  
   public static void main(String args[])   
   {  
      Scanner sc = new Scanner(System.in);
      int sum=0;	  
      System.out.print("Enter the First Number of the range:  ");
      int i=sc.nextInt();
      System.out.print("\nEnter the Last Number of the range:  ");
      int number=sc.nextInt();
      System.out.print("\nList of even numbers from "+i+" to "+number+": ");  
      for (;i<=number;i++)   
      {  
        if (i%2==0)   
        {  
            System.out.print(i + " ");  
			      sum+=i;
        }  
      }   
      System.out.print("\nSum of the Even numbers: "+sum);	  
   }  
}  
